<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingHorizontal="20dp"
    android:paddingVertical="100dp">

    <Button
        android:id="@+id/busInfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:paddingLeft="20dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/button_f"
        android:drawableLeft="@drawable/ic_directions_bus"
        android:text="@string/busInfo"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/alert"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/button_s"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_add_alert"
        android:focusable="true"
        android:paddingLeft="20dp"
        android:text="@string/alert"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"/>
</LinearLayout>

</ScrollView>