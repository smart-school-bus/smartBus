<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingHorizontal="20dp"
    android:paddingVertical="100dp"
    >


    <Button
        android:id="@+id/busInfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:paddingLeft="30dp"
        android:background="@drawable/button_f"
        android:drawableLeft="@drawable/ic_action_bus"
        android:text="@string/busInfo"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/alert"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:paddingLeft="30dp"
        android:background="@drawable/button_s"
        android:drawableLeft="@drawable/ic_add_alert"
        android:text="@string/alert"
        android:textAlignment="center"
        android:textAllCaps="false"
        />

</LinearLayout>