<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BusDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/button_st"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:src="@drawable/bus_icon"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:text="@string/bus_num"/>
                <TextView
                    android:id="@+id/bus_id"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:paddingLeft="5dp"
                    android:text="Bus197545545"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:text="@string/location"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:paddingTop="15dp"
                    android:layout_height="match_parent"
                    android:text="55456233,532665565"/>
                <ImageButton
                    android:id="@+id/b_map"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:src="@drawable/ic_action_location"
                    android:background="@android:color/transparent"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:text="@string/stuNum"/>
                <TextView
                    android:id="@+id/num_p"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:text="5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:text="@string/d_n"/>
                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent"
                    android:text="ALI AHMAD BASHRHEL"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <Button
            android:id="@+id/students"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/r_s"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:theme="@style/PrimaryButton" />
        <Button
            android:id="@+id/bus_stops"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/b_s"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:theme="@style/PrimaryButton"

           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:id="@+id/bus_details">


    </LinearLayout>


</LinearLayout>