<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegistrationDriverFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height_ed"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="@dimen/paddingText">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:paddingLeft="5dp"
                android:text="@string/f_name"
               />
            <EditText
                android:id="@+id/f_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="@android:color/black"
                android:background="@android:drawable/editbox_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height_ed"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="@dimen/paddingText">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:paddingLeft="5dp"
                android:text="@string/s_name" />
            <EditText
                android:id="@+id/s_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="@android:color/black"
                android:background="@android:drawable/editbox_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height_ed"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="@dimen/paddingText"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:paddingLeft="5dp"
                android:text="@string/l_name"
               />
            <EditText
                android:id="@+id/l_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="@android:color/black"
                android:background="@android:drawable/editbox_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height_ed"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="@dimen/paddingText">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:paddingLeft="5dp"
                android:text="@string/ph_num" />
            <EditText
                android:id="@+id/ph"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:text="+966"
                android:textColor="@android:color/black"
                android:enabled="false"
                android:background="@android:drawable/editbox_background"/>
            <EditText
                android:id="@+id/ph_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:inputType="phone"
                android:background="@android:drawable/editbox_background"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bus_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height_ed"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="@dimen/paddingText">
            <TextView
                android:id="@+id/bus_num_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:paddingLeft="5dp"
                android:text="@string/bus_num" />
            <Spinner
                android:id="@+id/bus_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:drawable/btn_dropdown" />

        </LinearLayout>
    <LinearLayout
        android:id="@+id/pass_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="@dimen/paddingText">
        <LinearLayout
            android:id="@+id/old_p"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height_ed"
            android:layout_marginVertical="16dp"
            >

            <TextView
                android:id="@+id/old_pass_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:text="@string/c_p" />
            <EditText
                android:id="@+id/old_pass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="textPassword"
                android:background="@android:drawable/editbox_background"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height_ed"
            android:layout_marginVertical="16dp">
            <TextView
                android:id="@+id/new_pass_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:text="@string/n_p" />
            <EditText
                android:id="@+id/new_pass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="textPassword"
                android:background="@android:drawable/editbox_background"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height_ed"
            android:layout_marginVertical="16dp">
            <TextView
                android:id="@+id/v_pass_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:text="@string/v_p" />



            <EditText
                android:id="@+id/v_pass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="textPassword"
                android:background="@android:drawable/editbox_background"/>
        </LinearLayout>
</LinearLayout>

    <Button
        android:id="@+id/create_acc"
        android:layout_width="200dp"
        android:layout_height="@dimen/edit_height_ed"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/button_st"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:text="@string/create_account"
        android:textColor="@android:color/white"/>
</LinearLayout>
</ScrollView>