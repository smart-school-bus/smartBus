<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="90dp"
    android:paddingHorizontal="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

    <Button
        android:id="@+id/students"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/button_f"
        android:clickable="true"
        android:drawableLeft="@drawable/bags"
        android:focusable="true"
        android:paddingLeft="20dp"
        android:text="@string/child"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>


    <Button
        android:id="@+id/bus_location"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:paddingLeft="20dp"
        android:background="@drawable/button_s"
        android:drawableLeft="@drawable/ic_place"
        android:textColor="@color/colorPrimary"
        android:text="@string/tracing"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        />



    <Button
        android:id="@+id/add_complains"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:paddingLeft="20dp"
        android:background="@drawable/button_f"
        android:drawableLeft="@drawable/ic_note_add"
        android:textColor="@android:color/white"
        android:text="@string/addComplains"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        />

    </LinearLayout>
</RelativeLayout>